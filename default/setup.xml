<setup>
         <block title="Configuration of Spamhaus Data Query Service (DQS) Token" endpoint="spamhaus/conf" entity="app_config">
                 <input field="token">
                         <label>Token</label>
                         <type>text</type>
                 </input>
         </block>
         <block title="Proxy Configuration" endpoint="spamhaus/conf" entity="app_config">
                <input field="proxy_enabled">
                        <label>Use Proxy Server</label>
                        <type>bool</type>
                </input>
                <input field="proxy_address">
                        <label>Proxy Adress</label>
                        <type>text</type>
                </input>
                <input field="proxy_port">
                        <label>Proxy Port</label>
                        <type>text</type>
                </input>
                        <input field="proxy_https">
                        <label>HTTPS Proxy</label>
                        <type>bool</type>
                </input>
                <input field="proxy_user">
                        <label>User (optional)</label>
                        <type>text</type>
                </input>
                <input field="proxy_passw">
                        <label>Password (optional)</label>
                        <type>text</type>
                </input>
        </block>
</setup>
